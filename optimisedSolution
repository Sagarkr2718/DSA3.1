public class Solution {
    public Long solve(String A) {
        long countA = 0;
        long answer = 0;
        for(int i = 0; i<A.length(); i++){
            if(A.charAt(i)=='A'){
                countA++;
            }
            if(A.charAt(i)=='G'){
                answer=answer+countA;
            }
        }
        return answer;
    }
}
